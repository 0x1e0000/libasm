NAME			=		libasm.a

SRCS			=		ft_strlen.s ft_strcpy.s \
						ft_strcmp.s ft_strdup.s \
						ft_write.s ft_read.s

OBJS			=		ft_strlen.o ft_strcpy.o \
						ft_strcmp.o ft_strdup.o \
						ft_write.o ft_read.o main.o
all: $(NAME)

$(NAME):
	nasm -f macho64 $(SRCS)
	gcc -Wall -Wextra -Werror -c main.c
	gcc $(OBJS)
	ar -rc $(NAME) $(OBJS)
	ranlib $(NAME)
	@echo "          _____                    _____                    _____          "
	@echo "         /\\    \\                  /\\    \\                  /\\    \\         "
	@echo "        /::\\    \\                /::\\    \\                /::\\____\\        "
	@echo "       /::::\\    \\              /::::\\    \\              /::::|   |        "
	@echo "      /::::::\\    \\            /::::::\\    \\            /:::::|   |        "
	@echo "     /:::/\\:::\\    \\          /:::/\\:::\\    \\          /::::::|   |        "
	@echo "    /:::/__\\:::\\    \\        /:::/__\\:::\\    \\        /:::/|::|   |        "
	@echo "   /::::\\   \\:::\\    \\       \\:::\\   \\:::\\    \\      /:::/ |::|   |        "
	@echo "  /::::::\\   \\:::\\    \\    ___\\:::\\   \\:::\\    \\    /:::/  |::|___|______  "
	@echo " /:::/\\:::\\   \\:::\\    \\  /\\   \\:::\\   \\:::\\    \\  /:::/   |::::::::\\    \\ "
	@echo "/:::/  \\:::\\   \\:::\\____\\/::\\   \\:::\\   \\:::\\____\\/:::/    |:::::::::\\____\\"
	@echo "\\::/    \\:::\\  /:::/    /\\:::\\   \\:::\\   \\::/    /\\::/    / ~~~~~/:::/    /"
	@echo " \\/____/ \\:::\\/:::/    /  \\:::\\   \\:::\\   \\/____/  \\/____/      /:::/    / "
	@echo "          \\::::::/    /    \\:::\\   \\:::\\    \\                  /:::/    /  "
	@echo "           \\::::/    /      \\:::\\   \\:::\\____\\                /:::/    /   "
	@echo "           /:::/    /        \\:::\\  /:::/    /               /:::/    /    "
	@echo "          /:::/    /          \\:::\\/:::/    /               /:::/    /     "
	@echo "         /:::/    /            \\::::::/    /               /:::/    /      "
	@echo "        /:::/    /              \\::::/    /               /:::/    /       "
	@echo "        \\::/    /                \\::/    /                \\::/    /        "
	@echo "         \\/____/                  \\/____/                  \\/____/         "
	@echo "                                                                           "

bonus: $(NAME)

clean:
	rm -rf $(OBJS) $(BOBJS)

fclean: clean
	rm -rf $(NAME)

re: fclean all
