NAME			=		libasm.a

OBJS			=		ft_strlen.o \
						ft_strcpy.o \
						ft_strcmp.o \
						ft_strdup.o \
						ft_write.o  \
						ft_read.o

COMPILE			=	nasm -f macho64

all: $(NAME)

$(NAME):
	$(COMPILE) ft_strlen.s
	$(COMPILE) ft_strcpy.s
	$(COMPILE) ft_strcmp.s
	$(COMPILE) ft_strdup.s
	$(COMPILE) ft_write.s
	$(COMPILE) ft_read.s
	ar -rc $(NAME) $(OBJS)

	@echo "                                                                                                       "
